// Small tablet
@media (max-width: 640px)
    .content
        .contacts.c1-2
            column(1/1)
            p:first-child
                padding-top 10px

//Mobile
@media (max-width: 480px)
    .full-bg
        &.slogan
            background none
    section
        article:nth-child(1)
            padding-bottom inherit
    .content
        .c1-2
            column(1/1)

